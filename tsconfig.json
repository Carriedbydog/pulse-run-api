{
  "compilerOptions": {
    "lib": ["es2015", "es2017", "dom"],
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "**/*.json", "./types/*.d.ts", ".eslintrc.js"]
}
